@model IEnumerable<Alexandria.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2 class="title1">Index</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<div class="grid-bottom widget-shadow">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioCPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioDataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioTelefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioEndereco)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioCPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioDataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioTelefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioEndereco)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.UsuarioId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.UsuarioId }) |
                    @Html.ActionLink("Apagar", "Delete", new { id = item.UsuarioId })
                </td>
            </tr>
        }

    </table>
</div>
