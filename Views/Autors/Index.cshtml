@model IEnumerable<Alexandria.Models.Autor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2 class="title1">Index</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<div class="grid-bottom widget-shadow">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AutorNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutorDataNascimento)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AutorNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AutorDataNascimento)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.AutorId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.AutorId }) |
                    @Html.ActionLink("Apagar", "Delete", new { id = item.AutorId })
                </td>
            </tr>
        }

    </table>
</div>
